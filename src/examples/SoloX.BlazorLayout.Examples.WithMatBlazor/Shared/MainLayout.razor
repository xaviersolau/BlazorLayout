@inherits LayoutComponentBase

<ResponsiveLayout NavigationClass="@Theme.GetClass("mat-elevation-z8 mdc-theme--secondary-bg")"
                  MaxProportion="20"
                  EnableContentScroll="@MatchDisplaySize"
                  EnableOutline="true"
                  @bind-UseSmallNavigation="@SmallNav"
                  HideHeader="@HideHeader"
                  HideFooter="@HideFooter"
                  DisableHorizontalNavigationMenuScrollX="@DisableHorizontalNavScroll">
    <NavigationHeader>
        <MatCard Class="@Theme.GetClass("mdc-theme--secondary-bg mdc-theme--on-secondary")">
            <MatCardActions>
                <MatCardActionIcons Style="flex-grow: 0;">
                    <MatIconButton Class="mdc-theme--on-secondary" Icon="@MatIconNames.Menu" @onclick="ToggleNav" />
                </MatCardActionIcons>

                <MatCardActionButtons>
                    <MatButtonLink Class="mdc-theme--on-secondary" Href="">BlazorLayout Examples</MatButtonLink>
                </MatCardActionButtons>
            </MatCardActions>
        </MatCard>
    </NavigationHeader>
    <SmallNavigationHeader>
        <MatCard Class="@Theme.GetClass("mdc-theme--secondary-bg mdc-theme--on-secondary")">
            <MatCardActions>
                <MatCardActionIcons>
                    <MatIconButton Class="mdc-theme--on-secondary" Icon="@MatIconNames.Menu" @onclick="ToggleNav" />
                </MatCardActionIcons>
            </MatCardActions>
        </MatCard>
    </SmallNavigationHeader>
    <NavigationMenu>
        <MatPaper Class="height-100 overflow-auto" Elevation="4">
            <NavMenu />
        </MatPaper>
    </NavigationMenu>
    <SmallNavigationMenu>
        <MatPaper Class="height-100 overflow-auto" Elevation="4">
            <NavMenu SmallNav="true"/>
        </MatPaper>
    </SmallNavigationMenu>
    <Header>
        <MatPaper Class="mdc-theme--primary-bg mdc-theme--on-primary" Elevation="6">
            <div class="card-content">
                <MatHeadline6 Style="margin:0px;">
                    Header
                </MatHeadline6>

                <MatBody1 Style="margin:0px;">
                    Here is a demo of the BlazorLayout project.
                </MatBody1>
            </div>

        </MatPaper>
    </Header>
    <Outline>
        <MatPaper Class="mdc-theme--secondary-bg mdc-theme--on-secondary height-100 overflow-auto" Elevation="6">
            <div class="card-content">
                <MatHeadline6 Style="margin:0px;">
                    Outline
                </MatHeadline6>

                <MatBody1 Style="margin:0px;">
                    Here is the Outline of the demo.
                </MatBody1>
                <MatBody1 Style="margin:0px;">
                    It will hide itself if the display size is too small.
                </MatBody1>

                <MatBody1 Style="margin-top: 1rem;">
                    Main page locked to display size.
                    <MatSlideToggle @bind-Value="@MatchDisplaySize" Style="--mdc-theme-secondary: var(--mdc-theme-primary);"></MatSlideToggle>
                </MatBody1>
                <MatBody1 Style="margin-top: 1rem;">
                    Hide Header.
                    <MatSlideToggle @bind-Value="@HideHeader" Style="--mdc-theme-secondary: var(--mdc-theme-primary);"></MatSlideToggle>
                </MatBody1>
                <MatBody1 Style="margin-top: 1rem;">
                    Hide Footer.
                    <MatSlideToggle @bind-Value="@HideFooter" Style="--mdc-theme-secondary: var(--mdc-theme-primary);"></MatSlideToggle>
                </MatBody1>
                <MatBody1 Style="margin-top: 1rem;">
                    Disable Scroll on Horizontal Nav.
                    <MatSlideToggle @bind-Value="@DisableHorizontalNavScroll" Style="--mdc-theme-secondary: var(--mdc-theme-primary);"></MatSlideToggle>
                </MatBody1>
            </div>
        </MatPaper>
    </Outline>
    <Footer>
        <MatPaper Class="height-100 mdc-theme--secondary-bg mdc-theme--on-secondary overflow-auto" Elevation="6">
            <div class="card-content">
                <MatBody1 Style="margin:0px;">
                    Footer : Thanks to MatBlazor we can use Material Design.
                </MatBody1>
            </div>

        </MatPaper>
    </Footer>
    <ChildContent>
        @Body
    </ChildContent>
</ResponsiveLayout>
